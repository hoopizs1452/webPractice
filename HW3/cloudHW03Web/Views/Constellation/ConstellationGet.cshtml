
@model cloudHW03Web.Models.ConstellationModels

@{
    ViewBag.Title = "星座查詢服務";
}



<div align="center">
    <br />
    <b class="label label-danger" style="font-size:x-large">呼叫星座查詢服務 by GET</b>
    <br /> <br />
    @*建立星座查詢服務表單*@
    @using (Html.BeginForm("ConstellationGet", "Constellation"))
    {
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Month, new { @class = "label label-warning" })
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Month)
                    @Html.ValidationMessageFor(model => model.Month, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Day, new { @class = "label label-warning" })
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Day)
                    @Html.ValidationMessageFor(model => model.Day, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Result, new { @class = "label label-warning" })
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Result)
                </td>
            </tr>
        </table>
        <input type="submit" name="btnCompute" value="查詢" class="btn btn-success">
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


