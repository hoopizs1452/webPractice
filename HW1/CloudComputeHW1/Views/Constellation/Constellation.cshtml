@model CloudComputeHW1.ViewModels.ConstellationViewModel
@{
    ViewBag.Title = "查詢星座";
}

<div align="center">
    <br />
    <b class="label label-danger" style="font-size:large">查詢星座</b>
    <br />
    @*建立查詢星座表單*@
    @using (Html.BeginForm("Constellation", "Constellation"))
    {
<table>
    <tr>
        <td>
            @Html.LabelFor(m => m.Month, new { @class = "label label-warning label-sm" }) <!-- 月份的輸入欄 -->
        </td>
        <td>
            @Html.TextBoxFor(m => m.Month)
            @Html.ValidationMessageFor(m => m.Month, "", new { @class = "text-danger" }) <!-- 日期的輸入欄 -->
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.Date, new { @class = "label label-warning label-sm" }) <!-- 結果的顯示欄 -->
        </td>
        <td>
            @Html.TextBoxFor(m => m.Date)
            @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.Result, new { @class = "label label-warning label-sm" })
        </td>
        <td>
            @Html.TextBoxFor(m => m.Result)
        </td>
    </tr>
</table>
        <input type="submit" name="btnCompute" value="查詢" class="btn btn-success" />
    }
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}