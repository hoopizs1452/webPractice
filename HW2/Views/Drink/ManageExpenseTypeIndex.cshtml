@{
    ViewBag.Title = "管理酒的種類";
}

<div align="center" style="font-family:標楷體">
    <br />
    <b class="label label-danger" style="font-size:x-large">管理酒的種類操作介面</b>
    <br />
    <br />
    @*載入新增酒的種類頁面*@
    <div id="AddNewExpenseType">
        @Html.Action("AddNewExpenseType")
    </div>

    @*載入刪除酒的種類頁面*@
    <div id="DeleteExpenseType">
        @Html.Action("DeleteExpenseType")
    </div>
    <br />
    @Html.ActionLink("顯示所有酒的種類", "ManageExpenseTypeIndex", "Drink", null, new { @class = "btn btn-success" }) <br />
    @if (TempData["Manage"] == null)
    {
        @Html.TextArea("Result", null, 14, 100, htmlAttributes: new { style = "width: 50%; max-width: 100%;" })
    }
    else
    {
        @Html.TextArea("Result", TempData["Manage"].ToString(), 14, 100, htmlAttributes: new { style = "width: 50%; max-width: 100%;" })
    }
    <br />
    @Html.ActionLink("儲存消費紀錄頁面", "SaveExpenseIndex", "Drink", null, new { @class = "btn btn-success btn-sm" })  <span>&nbsp;</span>
    @Html.ActionLink("查詢消費紀錄頁面", "QueryExpenseIndex", "Drink", null, new { @class = "btn btn-success btn-sm" }) <span>&nbsp;</span>
    @Html.ActionLink("刪除消費紀錄頁面", "DeleteExpenseIndex", "Drink", null, new { @class = "btn btn-success btn-sm" })
</div>